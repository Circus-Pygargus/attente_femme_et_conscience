{% extends 'admin/index.html.twig' %}

{% block javascripts %}
    {{ encore_entry_script_tags('app_admin_publish') }}
{% endblock %}

{% block adminContent %}
<h2 class="title">Gérer les produits</h2>

<div><a href="{{ path('admin_products_create') }}" class="btn btn-inverted">Créer</a></div>

{%  if products|length > 0 %}
<table class="table">
    <thead>
    <tr>
        <th class="modify">Modifier</th>
        <th>Supprimer</th>
    </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr class="element">
            <td class="element-title">
                <a
                        href="{{ path('admin_products_edit', {
                            slug: product.slug
                        }) }}"
                >
                    {{ product.title }}
                </a>
            </td>
            <td class="element-delete">
                <a href="#">X</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

    {{ knp_pagination_render(products) }}
{% else %}
    <p class="empty-array">Il n'y a aucun produit enregistré.</p>
{% endif %}
{% endblock %}
